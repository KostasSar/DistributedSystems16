				<input type="text" placeholder="id" name="e,name"required><br>
				Please enter an employee password:<br>
				<input type="text" placeholder="password" name="empsw"required><br>
				
				<input type="submit" value="Submit"> 
				<button type="reset"  class="Cbutton" >Clear</button>
				<input type="button" class="Bbutton" value="Back" onclick="ShowFunction(1)"> 
			</form>
		</div>	
		
		<div id="ModifyEmployeeAccountDiv">
			<input type="button" class="button" id="ModifyEmployeeAccountButton" onclick="HideFunction(2)" value="Modify Employee Account"><br>
			<form id="ModifyEmployeeAccountForm" style="display:none">
				Choose an id:
				Please enter an employee name:<br>
				<input type="text" placeholder="name" name="emname" required><br>
				Please enter an employee surname:<br>
				<input type="text" placeholder="surname" name="emcusurname" required><br>
				Please enter an employee phone number:<br>
				<input type="text" placeholder="phone number" name="emphone" required><br>
				Please enter an employee id:<br>
				<input type="text" placeholder="id" name="e,name"required><br>
				Please enter an employee password:<br>
				<input type="text" placeholder="password" name="empsw"required><br>
				
				<input type="submit" value="Submit"> 
				<button type="reset"  class="Cbutton" >Clear</button>
				<input type="button" class="Bbutton" value="Back" onclick="ShowFunction(2)"> 
			</form>
		</div>
		
		<div id="DeleteEmployeeAccountDiv"> 
			<input type="button" class="button" id="DeleteEmployeeAccountButton" onclick="HideFunction(3)" value="Delete Employee Account"><br>
			<form id="DeleteEmployeeAccountForm" style="display:none">
				Choose an id:
				<input type="text" name="iddeleter" required><br>
				<input type="submit" value="Submit"> 
				<button type="reset"  class="Cbutton" >Clear</button>
				<input type="button" class="Bbutton" value="Back" onclick="ShowFunction(3)"> 
			</form>
		</div>	


package beans;

import java.io.Serializable;

public class Customer implements Serializable {
	private static final long serialVersionUID = -1355807851822025659L;
	private String name;
	private String surname;
	private String TRN;
	private int Phone_Number;
	private int Cash_Prize;
	private int Store_id;

	public Customer(String nm, String srnm, String trn,int pn, int cp,int si ) {
		this.name = nm;
		this.TRN = trn;
		this.surname = srnm;
		this.Phone_Number = pn;
		this.Cash_Prize = cp;
		this.Store_id = si;
		
	}

	public void setName(String name) {
		this.name = name;
	}

	public void setSurname(String surname) {
		this.surname = surname;
	}

	public void setTRN(String TRN) {
		this.TRN = TRN;
	}

	
	public void setPhone(int Phone_Number) {
		this.Phone_Number = Phone_Number;
	}
	
	public void setPrize(int Cash_Prize) {
		this.Cash_Prize = Cash_Prize;
	}
	
	
	public void setStore_ID(int store_id) {
		this.Store_id = store_id;
	}
	
	
	
	
	
	public String getName() {
		return name;
	}

	public String getSurname() {
		return surname;
	}

	public String getTRN() {
		return TRN;
	}

	public int getPhone() {
		return Phone_Number;
	}

	
	public int getCash() {
		return Cash_Prize;
	}
	
	public int getStoreID() {
		return Store_id;
	}
	
	
	
	@Override
	public String toString() {
		return "Name=" + this.name + ", Surname=" + this.surname + ", TRN=" + this.TRN + ", Phone Number= " + this.Phone_Number + " Cash Prize = " + this.Cash_Prize + " Store ID " + this.Store_id ;
	}
}

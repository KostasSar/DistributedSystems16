CREATE TABLE EMPLOYEE(
`Name` varchar(20) NOT NULL,
`Surname` varchar(20) NOT NULL,
`Id` varchar(4) NOT NULL
);

CREATE TABLE MECHANIC(
`Name` varchar(20) NOT NULL,
`Surname` varchar (20) NOT NULL,
`Id` int (4) NOT NULL
);

CREATE TABLE CUSTOMER(
`Entry` int(100) AUTO_INCREMENT,
`Name` varchar(20) NOT NULL,
`Surname` varchar(20) NOT NULL,
`TRN` int(9) NOT NULL,
`Phone_Number`int(10),
`Cash_Prize` float(6),
PRIMARY KEY (`TRN`),
UNIQUE KEY (`Entry`)
);

CREATE TABLE VEHICLE(
`Entry` int(100) AUTO_INCREMENT,
`Model` varchar(40),
`License_Plate` varchar(40) NOT NULL UNIQUE,
`Fuel_Type` enum('Gas','Petrol','Oil'),
`Release_Year` int(4),
`Vehicle_condition` enum('Bad','Moderate','Good'),
`Owner_TRN` int(9) NOT NULL,
FOREIGN KEY (`Owner_TRN`) REFERENCES CUSTOMER (`TRN`),
UNIQUE KEY (`Entry`)
)AUTO_INCREMENT = 1;

SELECT * FROM EMPLOYEE;
SELECT * FROM MECHANIC;
SELECT * FROM CUSTOMER;
SELECT * FROM VEHICLE ORDER BY Entry;
